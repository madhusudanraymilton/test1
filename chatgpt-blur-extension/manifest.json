{
  "manifest_version": 3,
  "name": "ChatGPT History Blur on Idle",
  "description": "Blurs or hides ChatGPT conversation history when the mouse is not hovering it.",
  "version": "1.0",
  "permissions": ["scripting", "storage"],
  "host_permissions": ["https://chat.openai.com/*"],
  "action": {
    "default_title": "ChatGPT Blur",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
