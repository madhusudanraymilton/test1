<odoo>
    <!-- Tree View -->
    <record id="view_automobile_vehicle_list" model="ir.ui.view">
        <field name="name">automobile.vehicle.list</field>
        <field name="model">automobile.vehicle</field>
        <field name="arch" type="xml">
            <list string="Vehicles">
                <field name="name"/>
                <field name="license_plate"/>
                <field name="brand"/>
                <field name="model"/>
                <field name="year"/>
                <field name="partner_id"/>
                <field name="odometer"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_automobile_vehicle_form" model="ir.ui.view">
        <field name="name">automobile.vehicle.form</field>
        <field name="model">automobile.vehicle</field>
        <field name="arch" type="xml">
            <form string="Vehicle">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g., Toyota Corolla 2020"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Vehicle Information">
                            <field name="license_plate"/>
                            <field name="vin"/>
                            <field name="partner_id"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group string="Details">
                            <field name="brand"/>
                            <field name="model"/>
                            <field name="year"/>
                            <field name="color"/>
                            <field name="odometer"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_automobile_vehicle_search" model="ir.ui.view">
        <field name="name">automobile.vehicle.search</field>
        <field name="model">automobile.vehicle</field>
        <field name="arch" type="xml">
            <search string="Vehicles">
                <field name="name"/>
                <field name="license_plate"/>
                <field name="brand"/>
                <field name="partner_id"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="Owner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                <filter string="Brand" name="group_brand" context="{'group_by': 'brand'}"/>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_automobile_vehicle_kanban" model="ir.ui.view">
        <field name="name">automobile.vehicle.kanban</field>
        <field name="model">automobile.vehicle</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="license_plate"/>
                <field name="brand"/>
                <field name="model"/>
                <field name="image"/>
                <field name="partner_id"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('automobile.vehicle', 'image', record.id.raw_value)" alt="Vehicle" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <ul>
                                    <li><field name="license_plate"/></li>
                                    <li t-if="record.brand.raw_value"><field name="brand"/> <field name="model"/></li>
                                    <li t-if="record.partner_id.raw_value">Owner: <field name="partner_id"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_automobile_vehicle" model="ir.actions.act_window">
        <field name="name">Vehicles</field>
        <field name="res_model">automobile.vehicle</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_automobile_vehicle_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first vehicle
            </p>
            <p>
                Register vehicles to track their maintenance and service history.
            </p>
        </field>
    </record>
</odoo>